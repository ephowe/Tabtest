<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".CoverActivity" >




    <TextView android:id="@+id/tv_ftp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FTP地址"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_ftp"
        android:layout_alignRight="@+id/tv_ftp"
        android:layout_alignEnd="@+id/tv_ftp" />

    <TextView android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tv_user"
        android:layout_alignRight="@+id/tv_user"
        android:layout_alignEnd="@+id/tv_user"/>


    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_ftp"
        android:text="192.168.51.1"
        android:layout_alignParentTop="true"
        android:layout_alignBaseline="@+id/tv_ftp"
        android:layout_toRightOf="@+id/tv_ftp"
        android:layout_toEndOf="@+id/tv_ftp"
        android:autoText="false"
        android:textSize="14dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_user"
        android:text="ipad"
        android:textSize="14dp"
        android:layout_alignBaseline="@+id/tv_user"
        android:layout_alignBottom="@+id/tv_user"
        android:layout_alignLeft="@+id/et_ftp"
        android:layout_alignStart="@+id/et_ftp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textSize="14dp"
        android:id="@+id/et_password"
        android:text="ipad"
        android:layout_alignBaseline="@+id/tv_password"
        android:layout_alignBottom="@+id/tv_password"
        android:layout_alignLeft="@+id/et_user"
        android:layout_alignStart="@+id/et_user" />


    <TextView android:id="@+id/tv_into"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:text="@string/launch_intro"
        android:layout_marginLeft="2dp" />

    <Button android:id="@+id/bt_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_click_me"
        android:layout_below="@+id/tv_into"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp" />

    <Button
        android:id="@+id/bt_delmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试WS"
        android:layout_alignTop="@+id/bt_update"
        android:layout_toRightOf="@+id/bt_update"
        android:layout_toEndOf="@+id/bt_update" />

    <Button
        android:id="@+id/bt_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:layout_below="@+id/bt_delmenu"
        android:layout_alignLeft="@+id/bt_delmenu"
        android:layout_alignStart="@+id/bt_delmenu" />

    <Button
        android:id="@+id/bt_sav_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存设置"
        android:layout_below="@+id/bt_update"
        android:layout_toLeftOf="@+id/bt_delmenu"
        android:layout_toStartOf="@+id/bt_delmenu" />


</RelativeLayout>